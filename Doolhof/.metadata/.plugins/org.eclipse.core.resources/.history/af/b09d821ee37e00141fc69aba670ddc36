import java.awt.*;
import javax.swing.*;

public class DoolhofV {
	
	private JPanel doolhof;
	
	public DoolhofV(int n)
	{
		doolhof = new JPanel(new GridLayout(n,n));
		int x = 0;
		int y = 0;
		
		while (x < n)
		{
			while (y < n)
			{
				doolhof.add(new TegelV());
				y++;
			}
			y = 0;
			x++;
		}
		
	}

}
